<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Equipment Tree View -->
        <record id="view_equipment_tree" model="ir.ui.view">
            <field name="name">equipment.equipment.tree</field>
            <field name="model">equipment.equipment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="serial_number"/>
                    <field name="location"/>
                    <field name="department_id"/>
                    <field name="employee_id"/>
                    <field name="maintenance_team_id"/>
                    <field name="technician_id"/>
                </tree>
            </field>
        </record>

        <!-- Equipment Form View -->
        <record id="view_equipment_form" model="ir.ui.view">
            <field name="name">equipment.equipment.form</field>
            <field name="model">equipment.equipment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="serial_number"/>
                                <field name="category_id"/>
                                <field name="location"/>
                            </group>
                            <group>
                                <field name="purchase_date"/>
                                <field name="warranty_info"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="department_id"/>
                                <field name="employee_id"/>
                            </group>
                            <group>
                                <field name="maintenance_team_id"/>
                                <field name="technician_id"/>
                            </group>
                        </group>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <button name="action_view_maintenance_requests" type="object" class="oe_stat_button" icon="fa-wrench">
                            <field name="maintenance_request_count" widget="statinfo" string="Maintenance"/>
                        </button>
                    </div>
                </form>
            </field>
        </record>

        <!-- Equipment Category Tree View -->
        <record id="view_equipment_category_tree" model="ir.ui.view">
            <field name="name">equipment.category.tree</field>
            <field name="model">equipment.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Equipment Category Form View -->
        <record id="view_equipment_category_form" model="ir.ui.view">
            <field name="name">equipment.category.form</field>
            <field name="model">equipment.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>