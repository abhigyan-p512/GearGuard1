<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Demo Equipment Categories -->
        <record id="category_machines" model="equipment.category">
            <field name="name">Machines</field>
        </record>
        <record id="category_computers" model="equipment.category">
            <field name="name">Computers</field>
        </record>

        <!-- Demo Maintenance Teams -->
        <record id="team_mechanics" model="maintenance.team">
            <field name="name">Mechanics</field>
        </record>
        <record id="team_it" model="maintenance.team">
            <field name="name">IT Support</field>
        </record>

        <!-- Demo Equipment -->
        <record id="equipment_printer" model="equipment.equipment">
            <field name="name">Printer 01</field>
            <field name="serial_number">PR001</field>
            <field name="category_id" ref="category_machines"/>
            <field name="location">Office Floor 1</field>
            <field name="maintenance_team_id" ref="team_mechanics"/>
        </record>

        <!-- Demo Maintenance Request -->
        <record id="request_printer_repair" model="maintenance.request">
            <field name="name">Printer not working</field>
            <field name="equipment_id" ref="equipment_printer"/>
            <field name="request_type">corrective</field>
            <field name="stage">new</field>
        </record>
    </data>
</odoo>